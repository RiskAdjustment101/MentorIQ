# MentorIQ Environment Configuration
# Copy to .env and fill in actual values
# NEVER commit .env to version control

# Application
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Auth0 Configuration (get from Auth0 Dashboard)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_API_AUDIENCE=https://api.mentoriq.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Database (use local PostgreSQL for development)
DATABASE_URL=postgresql://username:password@localhost:5432/mentoriq

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Encryption (generate with: python -c "from cryptography.hazmat.primitives.ciphers.aead import AESGCM; import base64; print(base64.b64encode(AESGCM.generate_key(256)).decode())")
ENCRYPTION_KEY=base64-encoded-256-bit-key-here

# Security
CORS_ORIGINS=["http://localhost:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Monitoring (optional)
LOG_LEVEL=INFO